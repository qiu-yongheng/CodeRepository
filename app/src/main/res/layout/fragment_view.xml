<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="88dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_gravity="center_horizontal"
                android:id="@+id/btn_quad"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="贝塞尔曲线动画"
                tools:layout_editor_absoluteY="6dp"/>

            <Button
                android:id="@+id/btn_quad_ll"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="容器背景动画"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@+id/btn_quad"/>

            <Button
                android:id="@+id/btn_red_point"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="可拖拽小红点"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@+id/btn_quad_ll"/>

            <Button
                android:id="@+id/btn_explosion"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="爆炸悬浮框"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@+id/btn_red_point"/>

            <Button
                android:id="@+id/btn_ll_shape"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="LinearGradient闪动文字"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@+id/btn_explosion"/>

            <Button
                android:id="@+id/btn_shadow"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="阴影效果"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@+id/btn_ll_shape"/>

            <Button
                android:id="@+id/btn_radial"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="RadialGradient水波纹"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@+id/btn_shadow"/>

            <Button
                android:id="@+id/btn_bitmap"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="图片动画"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@+id/btn_radial"/>

            <Button
                android:id="@+id/btn_smart"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="刷新控件"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@+id/btn_bitmap"/>

            <Button
                android:id="@+id/btn_slid"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="仿QQ侧滑菜单"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@+id/btn_smart"/>

            <Button
                android:id="@+id/btn_codoon"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="仿咕咚运动数据展示"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@+id/btn_smart"/>

            <Button
                android:id="@+id/btn_circle_progress"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="圆形进度条"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@+id/btn_smart"/>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>